.grid-container
  .col-100.main-wrap
    .col-25
      .sidebar-wrap
        .row
          .col-35
            .profile-picture
              //- Link to profile
              a(href="#")
                app-profile-picture([user]="user" [uploadable]="false" size="small")
          .col-65
            .profile-name-wrap
              //- Link to profile
              .profile-name
                a(href="{{user | userProfileLink}}") {{user | fullName}}
        .row
          .col-50
            .profile-minutes.
              {{user.minutesBalance}} Minutes
          .col-50
            .profile-score.
              {{user.pointsBalance}} Score
        .row
          .sidebar-item-wrap
            a(routerLink="/profilesetup")
              .col-25
                .sidebar-item-icon
                  i.kl-edit-profile
              .col-75
                .sidebar-item.
                  Edit Profile              
        .row
          .col-100
            .sidebar-item-wrap
              a(app-feedback-form)
                .col-25
                  .sidebar-item-icon
                    i.kl-feedback
                .col-75
                  .sidebar-item.
                    Send Feedback
        .row
          .col-100((click)="togglePeerToPeerOptions()")
            .sidebar-item-wrap.dropdown-item
              .col-25
                .sidebar-item-icon
                  i.kl-peer
              .col-65
                .sidebar-item.
                  Peer-to-Peer
              .col-10
                .dropdown-icon-wrap
                  i.kl-more([@peerToPeerRotate]="peerToPeerOptionsState")
          .col-100.overflow-hidden([@peerToPeerOptions]="peerToPeerOptionsState")
              .col-100
                .sidebar-subitem-wrap
                  a(routerLink="/home/filtered/My")
                    .col-25
                      .sidebar-item-icon
                        i.kl-my
                    .col-75
                      .sidebar-item.
                        My Posts
              .col-100
                .sidebar-subitem-wrap
                  a(routerLink="/home/filtered/Scheduled")
                    .col-25
                      .sidebar-item-icon
                        i.kl-calendar
                    .col-75
                      .sidebar-item.
                        Scheduled
              .col-100
                .sidebar-subitem-wrap
                  a(routerLink="/home/filtered/Bookmarked")
                    .col-25
                      .sidebar-item-icon
                        i.kl-bookmark
                    .col-75
                      .sidebar-item.
                        Bookmarked
        //.upcoming-events-wrap
          .row
            .col-100
              .title-wrap
                .col-80
                  .title.
                    Upcoming Events                
                .col-20
                  .info-icon
                    i.kl-info
          .upcoming-events-content
            .row
              .col-100
                .timer-wrap
                  i.kl-circle
                  span.timer-text.
                    in 13 days
            .row
              .col-100
                .with-wrap
                  span.with-subject.
                    3D Animation 
                  span.with-text.
                    with:
            .row
              .col-75
                .col-25
                  .profile-picture
                    //- Link to profile
                    a(href="#")
                      app-profile-picture([user]="user" size="x-small")
                .col-75
                  .profile-name-wrap
                    //- Link to profile
                    .profile-name
                      a(href="#") Ejub Hadzic
              .col-25
                .reward-wrap
                  span.reward-text.
                    135
                  i.kl-currency
          .row
            .all-events-wrap
              a(routerLink="/home/filtered/Scheduled")
                .all-events.
                  Check All Events
    .col-75
      .main-section-wrap
        .top-elements
          span#searchTitle Search
          input(type="text", placeholder="interests, bookmarked, math, angular...").search-p2p-input
        .p2p-post-cards
          router-outlet
