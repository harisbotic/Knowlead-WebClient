.friendship-strip-wrap(*ngIf='!isSelf() && !!availableOptions')
	.col-90
		button.first-option((click)="doAction(availableOptions[0].action)") {{ availableOptions[0].title }}
	.col-10
		span.dropdown-icon
			i.kl-more
	.dropdown-content
		button(*ngFor="let option of availableOptions.slice(1); index as i" (click)="doAction(option.action)").
			{{ option.title }}


